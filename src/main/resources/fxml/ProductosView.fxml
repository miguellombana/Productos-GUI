<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<BorderPane fx:id="view" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19">
   <center>
      <TableView fx:id="productsTable" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="codigoColumn" prefWidth="75.0" text="Código" />
          <TableColumn fx:id="denoColumn" prefWidth="75.0" text="Denominación" />
            <TableColumn fx:id="precioColumn" prefWidth="75.0" text="Precio" />
            <TableColumn fx:id="congeladoColumn" prefWidth="75.0" text="¿Congelado?" />
            <TableColumn fx:id="observaColumn" prefWidth="75.0" text="Observaciones" />
            <TableColumn fx:id="familiaColumn" prefWidth="75.0" text="Familia" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBack" text="Volver" />
         </children>
         <padding>
            <Insets top="5.0" />
         </padding>
      </HBox>
   </bottom>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</BorderPane>
