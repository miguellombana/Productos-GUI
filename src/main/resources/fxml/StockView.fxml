<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="view" minWidth="1000.0" prefHeight="400.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TableView fx:id="productsTable" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="codigoProducto" prefWidth="75.0" text="Código Producto" />
          <TableColumn fx:id="denoProducto" prefWidth="75.0" text="Denominación" />
            <TableColumn fx:id="codFamilia" prefWidth="75.0" text="Codigo Familia" />
            <TableColumn fx:id="denoFamilia" prefWidth="75.0" text="DenoFamilia" />
            <TableColumn fx:id="observaciones" prefWidth="75.0" text="Observaciones" />
            <TableColumn fx:id="codTienda" prefWidth="75.0" text="CodigoTienda" />
            <TableColumn fx:id="denoTienda" prefWidth="75.0" text="Denominacion Tienda" />
            <TableColumn fx:id="Unidades" prefWidth="75.0" text="Unidades " />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBack" text="Volver" />
         </children>
         <padding>
            <Insets top="5.0" />
         </padding>
      </HBox>
   </bottom>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</BorderPane>
